<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/ifNode"
    android:layout_width="250dp"
    android:layout_height="140dp"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <View
        android:id="@+id/beginIfView"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@color/ifcolor"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="73dp"
        android:layout_height="36dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/russo_one"
        android:gravity="center_vertical"
        android:text="@string/iftext"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/beginIfView"
        app:layout_constraintStart_toStartOf="@+id/beginIfView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ifInsidePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:minWidth="225dp"
        android:minHeight="35dp"
        app:layout_constraintStart_toEndOf="@+id/ifLine"
        app:layout_constraintTop_toBottomOf="@+id/beginIfView" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/beginIfView"
        app:layout_constraintEnd_toEndOf="@+id/beginIfView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        tools:ignore="SpeakableTextPresentCheck"
        android:importantForAutofill="no" />

    <View
        android:id="@+id/ifLine"
        android:layout_width="21dp"
        android:layout_height="35dp"
        android:background="@color/ifcolor"
        android:maxWidth="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beginIfView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ifPlaceForDrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:minHeight="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ifInsidePlace">

    </androidx.constraintlayout.widget.ConstraintLayout>



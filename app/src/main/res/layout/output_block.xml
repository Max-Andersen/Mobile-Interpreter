<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/outeNode"
    android:layout_width="250dp"
    android:layout_height="105dp"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"

    >

    <View
        android:id="@+id/beginView"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@color/purple_200"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:text="@string/Output"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/beginView"
        app:layout_constraintStart_toStartOf="@+id/beginView"
        app:layout_constraintTop_toTopOf="@+id/beginView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/outputPlaceForDrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:minHeight="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beginView">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/outputInput"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:background="@color/white"
        android:minWidth="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/beginView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>



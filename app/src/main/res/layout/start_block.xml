<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/startNode"
    android:layout_width="250dp"
    android:layout_height="138dp"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"

    >

    <View
        android:id="@+id/beginView"
        android:layout_width="250dp"
        android:layout_height="69dp"
        android:background="@color/gray"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="74dp"
        android:layout_height="40dp"
        android:text="@string/When"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/beginView"
        app:layout_constraintEnd_toEndOf="@+id/beginView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/beginView"
        app:layout_constraintTop_toTopOf="@+id/beginView"
        app:layout_constraintVertical_bias="0.457" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/placeForDrop"
        android:layout_width="236dp"
        android:layout_height="69dp"
        app:layout_constraintTop_toBottomOf="@+id/beginView">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="74dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/beginView"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/beginView"
        app:layout_constraintVertical_bias="0.482"
        app:srcCompat="@drawable/arrow" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="39dp"
        android:text="@string/Click"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/beginView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533" />

    <!--    <View-->
    <!--    />-->


</merge>
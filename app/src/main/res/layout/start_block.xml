<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/startNode"
    android:layout_width="250dp"
    android:layout_height="105dp"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <View
        android:id="@+id/beginView"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@color/ghostwhite"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:fontFamily="@font/russo_one"
        android:gravity="center"
        android:text="@string/When"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/beginView"
        app:layout_constraintStart_toStartOf="@+id/beginView"
        app:layout_constraintTop_toTopOf="@+id/beginView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/startPlaceForDrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:minHeight="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beginView">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="74dp"
        android:layout_height="40dp"
        android:contentDescription="@string/description"
        app:layout_constraintBottom_toBottomOf="@+id/beginView"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/beginView"
        app:srcCompat="@drawable/arrow"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="39dp"
        android:fontFamily="@font/russo_one"
        android:gravity="start|center_vertical"
        android:text="@string/Click"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/beginView"
        app:layout_constraintEnd_toEndOf="@+id/beginView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <View-->
    <!--    />-->


</merge>
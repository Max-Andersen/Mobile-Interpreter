<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="236dp"
    android:layout_height="138dp"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    android:id="@+id/whileNode"

    >

    <View
        android:id="@+id/beginView"
        android:layout_width="236dp"
        android:layout_height="69dp"
        android:background="@color/darkGreen"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="160dp"
        android:layout_height="67dp"
        android:text="while"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/beginView"
        app:layout_constraintEnd_toEndOf="@+id/beginView"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="@+id/beginView"
        app:layout_constraintTop_toTopOf="@+id/beginView"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/placeForDrop"
        android:layout_width="236dp"
        android:layout_height="69dp"
        app:layout_constraintTop_toBottomOf="@+id/beginView">
    </androidx.constraintlayout.widget.ConstraintLayout>


